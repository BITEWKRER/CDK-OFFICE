.hint {
  margin-left: 30rpx;
  font-family: 'Courier New', Courier, monospace;
  font-size: 36rpx;
  margin-top: 20rpx;
}

.search {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10%;
  margin-left: 30rpx;
}

.header {
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
}

.btn {
  height: 80rpx;
  width: 65%;
  text-align: center;
  margin-left: 10rpx;
  border: 4rpx;
  background-color: transparent;
}

.btn::after {
  border: none;
}

.cbtn {
  height: 50px;
  width: 75%;
  margin-top: 20rpx;
  /* margin-left: 5px;
  margin-right: 5px; */
  margin-bottom: 10rpx;
  background-color: rgba(188, 218, 139, 0.39);
  text-align: center;
  justify-content: center;
  font-size: 36rpx;
  vertical-align: middle;
}

.function {
  columns: 2;
  margin-top: 10rpx;
}

.functionraw {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  justify-content: center;
}

.text {
  font-style: normal;
  font-size: 1.1rem;
  color: #aaa;
  align-items: left;
  justify-content: center;
  display: flex;
}

.btn1 {
  width: 60%;
  height: 120rpx;
  margin-top:4rpx;
  background-color: transparent;
  border: none;
  color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.bgimg {
  width: 64rpx;
  height:64rpx;
}



.row {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
