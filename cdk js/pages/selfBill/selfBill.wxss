.item {
  width: 99%;
  height: 220rpx;
  border: 4rpx solid gray;
  margin-top: 10rpx;
  border-radius: 10rpx;
  background-color: rgba(188, 218, 139, 0.39);
}

.row {
  display: flex;
  flex-direction: row;
}

.ege {
  display: flex;
  flex-direction: row;
  text-align: center;
  justify-content: center;
  position: absolute;
  left: 10%;
  top: 2%;
}

.col {
  display: flex;
  flex-direction: column;
  position: absolute;
  right: 100rpx;
}

.cut {
  margin-right: 6rpx;
  margin-top: 6rpx;
  background-color: #616a6b;
  color: #fdfefe;
}

.name {
  margin-top: 12rpx;
  margin-left:6rpx;
}

.left {
  margin-left: 6rpx;
  justify-content: left;
}

.right {
  margin-right: 6rpx;
  justify-content: right;
  position: absolute;
  left: 50%;
}

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(19, 13, 13, 0.6);
  z-index: 9000;
  opacity: 0.7;
}

.modalDlg {
  width: 580rpx;
  height: 640rpx;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  margin: -370rpx 85rpx;
  background-color: #fff;
  border-radius: 36rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.input {
  width: 80%;
  height: 15px;
  margin-top: 40rpx;
  border-bottom: 2rpx solid gray;
}

.btn {
  margin-bottom: 10rpx;
  border: 20rpx;
}

.picker {
  width: 80%;
  height: 30rpx;
  margin-top: 40rpx;
}

.add_icon {
  position: fixed;
  width: 84rpx;
  height: 84rpx;
  bottom: 80rpx;
  right: 40rpx;
  z-index: 8000;
}

.hint {
  margin-top: 50%;
}

.up {
  margin-top: 30rpx;
  width: 100%;
  height: 95%;
}
