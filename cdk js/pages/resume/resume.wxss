.row {
    display: flex;
    flex-direction: row;
}

.item {
    width: 99%;
    height: 213rpx;
    border: 2rpx solid black;
    margin-top: 10rpx;
    background-color: #fdedec;
}

.edu {
    width: 100%;
    height: 260rpx;
    border: 2rpx solid black;
    margin-top: 20rpx;
}

.base {
    width: 99%;
    border: 2rpx solid black;
}

.row {
    display: flex;
    flex-direction: row;
}

.name {
    margin-top: 12rpx;
    margin-left: 6rpx;
}

.left {
    margin-left: 6rpx;
    justify-content: left;
    width: 350rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.right {
    margin-right: 6rpx;
    justify-content: right;
    position: absolute;
    left: 48%;
    width: 350rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9998;
    opacity: 0.7;
}

.modalDlg {
    width: 580rpx;
    height: 640rpx;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    margin: -370rpx 85rpx;
    background-color: #fff;
    border-radius: 36rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.input {
    width: 80%;
    height: 30rpx;
    margin-top: 40rpx;
    border-bottom: 2rpx solid #aab7b8;
}

.picker {
    width: 80%;
    height: 30rpx;
    margin-top: 40rpx;
}

.stitle {
    height: 30rpx;
    font-size: 26rpx;
    margin-left: 16rpx;
    text-align: center;
    text-justify: auto;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
}

.btn {
    margin-top: 10rpx;
    margin-bottom: 6rpx;
    margin-left: 4rpx;
    margin-right: 4rpx;
    border: 2rpx;
    background-color: #d1f2eb;
}

.count {
    margin-top: 20rpx;
    position: absolute;
    right: 30rpx;
}

.text {
    width: 100%;
    height: 200rpx;
    z-index: 0;
}
